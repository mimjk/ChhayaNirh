@{
    ViewBag.Title = "Verification Queue";
}

<div style="display: flex; min-height: 80vh;">

    <!-- Sidebar -->
    @Html.Partial("_AdminSidebar")

    <!-- Main Content -->
    <div style="flex-grow: 1; padding: 30px;">
        <h2 style="color: #5C0002; margin-bottom: 20px;">✅ Verification Queue</h2>

        <div style="background-color: #FBE9E7; padding: 20px; border-radius: 6px;">
            <p style="color: #3B1F1F;">Choose a type of verification to review:</p>

            <div style="margin-top: 20px;">
                <a href="@Url.Action("NIDVerificationQueue", "AdminVerification")"
                   style="background-color: #5C0002; color: white; padding: 10px 20px; border-radius: 6px; text-decoration: none; margin-right: 10px; font-weight: bold;">
                    Users to Verify
                </a>

                <a href="@Url.Action("PostVerificationQueue", "AdminVerification")"
                   style="background-color: #5C0002; color: white; padding: 10px 20px; border-radius: 6px; text-decoration: none; font-weight: bold;">
                    Posts to Verify
                </a>
            </div>
        </div>
    </div>

</div>
