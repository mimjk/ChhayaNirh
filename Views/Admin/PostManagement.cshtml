@{
    ViewBag.Title = "Post Management";
}

<div style="display: flex;">
    @Html.Partial("_AdminSidebar")

    <div style="flex-grow: 1; padding: 30px;">
        <h2 style="color: #5C0002; margin-bottom: 20px;">🏠 Manage Posts</h2>

        <div style="background-color: #FBE9E7; padding: 20px; border-radius: 6px;">
            <p style="color: #3B1F1F;">Here you can view, edit, or delete property listings.</p>

            <button style="background-color: #5C0002; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer;">
                ➕ Add New Post
            </button>
        </div>
    </div>
</div>