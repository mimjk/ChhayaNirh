@{
    ViewBag.Title = "Admin Settings";
}

<div style="display: flex;">
    @Html.Partial("_AdminSidebar")

    <div style="flex-grow: 1; padding: 30px;">
        <h2 style="color: #5C0002; margin-bottom: 20px;">⚙️ Admin Settings</h2>

        @if (ViewBag.Message != null)
        {
            <div style="background-color: #DFF0D8; color: #3C763D; padding: 10px; border-radius: 4px; margin-bottom: 20px;">
                @ViewBag.Message
            </div>
        }

        <div style="background-color: #FBE9E7; padding: 20px; border-radius: 6px;">
            <form method="post" action="/Admin/Settings">
                <div style="margin-bottom: 15px;">
                    <label for="maintenanceMode" style="display: block; font-weight: bold; color: #5C0002;">Maintenance Mode</label>
                    <select id="maintenanceMode" name="maintenanceMode" style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
                        <option value="off">Off</option>
                        <option value="on">On</option>
                    </select>
                </div>

                <div style="margin-bottom: 15px;">
                    <label for="reportThreshold" style="display: block; font-weight: bold; color: #5C0002;">Report Escalation Threshold</label>
                    <input type="number" id="reportThreshold" name="reportThreshold" value="3" style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
                </div>

                <div style="margin-bottom: 15px;">
                    <label for="verificationTimeout" style="display: block; font-weight: bold; color: #5C0002;">Verification Timeout (days)</label>
                    <input type="number" id="verificationTimeout" name="verificationTimeout" value="7" style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
                </div>

                <button type="submit" style="background-color: #5C0002; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer;">
                    💾 Save Settings
                </button>
            </form>
        </div>
    </div>
</div>