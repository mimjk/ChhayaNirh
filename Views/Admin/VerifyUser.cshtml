@model ChhayaNirh.Models.User
@{
    ViewBag.Title = "Verify User";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<div style="padding:20px;">
    <h2 style="color:#5C0002;">👤 User Verification</h2>

    <div style="background-color:#FBE9E7; padding:20px; border-radius:6px; margin-top:20px;">
        <p><strong>Full Name:</strong> @Model.FullName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone:</strong> @Model.Phone</p>
        <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("MMMM dd, yyyy")</p>
        <p><strong>NID Number:</strong> @Model.NIDNumber</p>
        <p><strong>Present Address:</strong> @Model.PresentAddress</p>
        <p><strong>Permanent Address:</strong> @Model.PermanentAddress</p>

        @if (!string.IsNullOrEmpty(Model.NIDDocumentPath))
        {
            <p><strong>NID Document:</strong></p>
            <a href="@Url.Content(Model.NIDDocumentPath)" target="_blank" style="color:blue;">View Document</a>
        }
        else
        {
            <p style="color:red;">No NID document uploaded.</p>
        }
    </div>

    <div style="margin-top:20px;">
        @using (Html.BeginForm("ApproveVerification", "Admin", new { id = Model.Id }, FormMethod.Post))
        {
            <button type="submit" style="background-color:green; color:white; padding:10px 20px; border:none; border-radius:6px; margin-right:10px;">
                ✅ Approve
            </button>
        }

        @using (Html.BeginForm("RejectVerification", "Admin", new { id = Model.Id }, FormMethod.Post))
        {
            <button type="submit" style="background-color:red; color:white; padding:10px 20px; border:none; border-radius:6px;">
                ❌ Reject
            </button>
        }
    </div>
</div>
