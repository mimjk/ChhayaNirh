@model ChhayaNirh.Models.User
@{
    ViewBag.Title = "Profile";
}

<main class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4" style="background-color: #FFFFF0;">

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="d-flex flex-column align-items-center mb-4">
                    <img src="@(string.IsNullOrEmpty(Model.ProfilePicturePath) ? Url.Content("~/Content/Images/default-profile2.png") : Url.Content(Model.ProfilePicturePath))"
                         class="rounded-circle mb-3"
                         alt="Profile Picture"
                         width="70" height="70" />
                    <h2 class="mb-0 text-center" style="color:#000000;">Your Profile</h2>
                </div>

                <div class="mb-3">
                    <p>
                        <strong>Full Name:</strong>
                        @Model.FullName
                        @if (Model.IsVerified)
                        {
                            <span style="color:green; font-size:1.2em;">✔</span>
                        }
                    </p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Phone:</strong> @Model.Phone</p>
                    <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("MMMM dd, yyyy") (Age: @Model.Age years)</p>
                    <p><strong>User Type:</strong> @Model.UserType</p>
                    <p><strong>NID Number:</strong> @Model.NIDNumber</p>

                    <p>
                        <strong>Present Address:</strong>
                        @if (!string.IsNullOrEmpty(Model.PresentAddress))
                        {
                            @Model.PresentAddress
                        }
                        else
                        {
                            <span class="text-muted">Not provided</span>
                        }
                    </p>

                    <p>
                        <strong>Permanent Address:</strong>
                        @if (!string.IsNullOrEmpty(Model.PermanentAddress))
                        {
                            @Model.PermanentAddress
                        }
                        else
                        {
                            <span class="text-muted">Not provided</span>
                        }
                    </p>

                    <p><strong>Member Since:</strong> @Model.CreatedAt.ToString("MMMM dd, yyyy")</p>

                    <p>
                        <strong>Verification Status:</strong>
                        @if (Model.IsVerified)
                        {
                            <span style="color:green; font-weight:bold;">Verified ✔</span>
                        }
                        else
                        {
                            <span style="color:red; font-weight:bold;">Not Verified ✖</span>
                        }
                    </p>
                </div>

                <div class="d-flex justify-content-center mt-4 gap-4">
                    <a href="@Url.Action("EditProfile", "Profile")"
                       class="btn"
                       style="background-color: #5C0002; color: #fff; border: none; ">
                        Edit Profile
                    </a>
                    <a href="@Url.Action("VerifyProfile", "Profile")"
                       class="btn"
                       style="background-color: lightskyblue; color: #fff; border: none;">
                        Verify Profile
                    </a>
                    <a href="@Url.Action("Logout", "Login")" class="btn btn-danger">Logout</a>
                </div>
            </div>
        </div>
    </div>
</main>