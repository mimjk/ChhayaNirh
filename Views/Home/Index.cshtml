@{
    ViewBag.Title = "Home Page";
}

<main>
    <!-- Banner Section -->
    <div class="banner text-center">
        <img src="~/Content/Images/banner1.jpg" alt="ChhayaNirh Banner" class="img-fluid" style="width:180%; height:350px; object-fit:cover;" />
    </div>

    <!-- Welcome Section -->
    <section class="text-center mt-4">
        <h1>Welcome to ChhayaNirh - ছায়ানীড় 🏠</h1>
        <p class="lead">
            A trusted platform for finding and posting houses for rent in Dhaka, Bangladesh.
            Connect with homeowners and renters, explore locations on maps, and make secure payments.
        </p>
    </section>

    <!-- About & Contact Section (Charcoal Color #36454F) -->
    <div class="row text-center mt-5">
        <section class="col-md-6">
            <div class="p-4">
                <h2 style="color:#36454F;">📄 About Us</h2>
                <p>
                    Learn more about ChhayaNirh and how we help connect homeowners with renters
                    through verified and secure processes.
                </p>
                <p>
                    <a href="@Url.Action("About", "Home")" class="btn btn-outline-dark charcoal-btn">
                        About This Platform
                    </a>
                </p>
            </div>
        </section>

        <section class="col-md-6">
            <div class="p-4">
                <h2 style="color:#36454F;">📞 Contact Us</h2>
                <p>
                    Have questions or need help? Reach out to our support team for assistance
                    with posting, searching, or payments.
                </p>
                <p>
                    <a href="@Url.Action("Contact", "Home")" class="btn btn-outline-dark charcoal-btn">
                        Contact Support
                    </a>
                </p>
            </div>
        </section>
    </div>

    <style>
        /* Charcoal buttons with hover effect */
        .charcoal-btn {
            color: #36454F;
            border-color: #36454F;
            transition: all 0.3s ease;
        }

            .charcoal-btn:hover {
                background-color: #5C0002;
                color: #ffffff;
                border-color: #5C0002;
            }
    </style>
</main>
