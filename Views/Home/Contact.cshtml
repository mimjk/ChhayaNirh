@{
    ViewBag.Title = "Contact ChhayaNirh";
}

<main class="container my-5">
    <h2 style="color:#000000;">Contact Us</h2>
    <p style="color:#000000;" class="lead">
        Have questions or need assistance with posting, searching, or making payments?
        Our support team is here to help you.
    </p>

    <address style="color:#000000;">
        <strong>Email Support:</strong> <a href="mailto:support@chhayanirh.com" style="color:#007BFF;">support@chhayanirh.com</a><br />
        <strong>Phone:</strong> +880 1234 567890<br />
        <strong>Office:</strong> Dhaka, Bangladesh
    </address>

    <p style="color:#000000;">
        You can also reach out to us via the
        @if (Session["UserId"] != null)
        {
            <!-- User logged in → internal chat page -->
            <a href="@Url.Action("Chat", "Chat")" style="color:#007BFF;">Chat</a>
        }
        else
        {
            <!-- User not logged in → open Chatbase widget -->
            <a href="javascript:void(0);" style="color:#007BFF;" onclick="openChatbot()">Chat</a>
        }
        feature on the website.
    </p>

    <script>
    function openChatbot() {
        // Chatbase automatically creates a floating button widget
        // This opens it programmatically
        if (window.chatbase) {
            window.chatbase('open');
        } else {
            alert("Chatbot is not available right now.");
        }
    }
    </script>

</main>
