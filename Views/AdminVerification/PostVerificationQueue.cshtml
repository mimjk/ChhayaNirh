@model IEnumerable<ChhayaNirh.Models.Post>
@{
    ViewBag.Title = "Post Verification Queue";
}

<div style="display:flex; min-height:80vh;">
    @Html.Partial("_AdminSidebar")

    <div style="flex-grow:1; padding:30px;">
        <h2 style="color:#5C0002;">🏠 Posts Pending Verification</h2>

        @if (TempData["Success"] != null)
        {
            <div style="color:green;">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div style="color:red;">@TempData["Error"]</div>
        }

        <table style="width:100%; margin-top:20px; border-collapse:collapse;">
            <thead style="background-color:#5C0002; color:white;">
                <tr>
                    <th style="padding:10px;">User</th>
                    <th style="padding:10px;">Area</th>
                    <th style="padding:10px;">Type</th>
                    <th style="padding:10px;">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model)
                {
                    <tr style="background-color:#FBE9E7;">
                        <td style="padding:10px;">@post.User.FullName</td>
                        <td style="padding:10px;">@post.Area</td>
                        <td style="padding:10px;">@post.PostType</td>
                        <td style="padding:10px;">
                            <a href="@Url.Action("VerifyPost", "AdminVerification", new { id = post.Id })"
                               style="color:#5C0002; font-weight:bold;">Review</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>