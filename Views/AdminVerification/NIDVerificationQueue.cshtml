@model IEnumerable<ChhayaNirh.Models.User>
@{
    ViewBag.Title = "NID Verification Queue";
}

<div style="display: flex; min-height: 80vh;">

    <!-- Sidebar -->
    @Html.Partial("_AdminSidebar")

    <!-- Main Content -->
    <div style="flex-grow: 1; padding: 30px;">
        <h2 style="color:#5C0002; margin-bottom: 20px;">👥 Users Pending Verification</h2>

        @if (TempData["Success"] != null)
        {
            <div style="color:green; font-weight:bold; margin-bottom:10px;">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div style="color:red; font-weight:bold; margin-bottom:10px;">@TempData["Error"]</div>
        }

        <table style="width:100%; border-collapse:collapse; margin-top:20px; box-shadow: 0 0 5px rgba(0,0,0,0.1);">
            <thead style="background-color:#5C0002; color:white;">
                <tr>
                    <th style="padding:10px; text-align:left;">Name</th>
                    <th style="padding:10px; text-align:left;">Email</th>
                    <th style="padding:10px; text-align:left;">NID Number</th>
                    <th style="padding:10px; text-align:left;">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr style="background-color:#FBE9E7; border-bottom:1px solid #ddd;">
                        <td style="padding:10px;">@user.FullName</td>
                        <td style="padding:10px;">@user.Email</td>
                        <td style="padding:10px;">@user.NIDNumber</td>
                        <td style="padding:10px;">
                            <a href="@Url.Action("VerifyUser", "AdminVerification", new { id = user.Id })"
                               style="color:#5C0002; text-decoration:none; font-weight:bold;">
                                Review
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
