@{
    ViewBag.Title = "Signup";
}

<main class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4" style="background-color:#f0f0f0;">
                <h2 class="text-center mb-4" style="color:#000000;">Create Your Account</h2>

                @using (Html.BeginForm("Signup", "Signup", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken() <!-- 🔹 Add this line -->

                    <div class="mb-3">
                        <label for="fullName" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="fullName" name="FullName" required />
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="Email" required />
                    </div>

                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone Number</label>
                        <input type="text" class="form-control" id="phone" name="Phone" required />
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="Password" required />
                    </div>

                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" id="confirmPassword" name="ConfirmPassword" required />
                    </div>

                    <div class="mb-3">
                        <label for="nid" class="form-label">Upload NID Scan</label>
                        <input type="file" class="form-control" id="nid" name="NIDScan" accept=".jpg,.png,.pdf" required />
                    </div>

                    <div class="mb-3">
                        <label for="bill" class="form-label">Upload Latest Electricity Bill</label>
                        <input type="file" class="form-control" id="bill" name="ElectricityBill" accept=".jpg,.png,.pdf" required />
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="terms" name="Terms" required />
                        <label class="form-check-label" for="terms">
                            I agree to the <a href="#" style="color:#007BFF;">terms and conditions</a>
                        </label>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-dark">Signup</button>
                    </div>
                }

                <p class="text-center mt-3" style="color:#000000;">
                    Already have an account? <a href="@Url.Action("Login", "Login")" style="color:#007BFF;">Login here</a>
                </p>
            </div>
        </div>
    </div>
</main>
