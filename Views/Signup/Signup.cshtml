@{
    ViewBag.Title = "Signup";
}

<main class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4" style="background-color: #FFFFF0;">
                <h2 class="text-center mb-4" style="color:#000000;">Create Your Account</h2>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @using (Html.BeginForm("Signup", "Signup", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label for="fullName" class="form-label">Full Name *</label>
                        <input type="text" class="form-control" id="fullName" name="FullName" required />
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email *</label>
                        <input type="email" class="form-control" id="email" name="Email" required />
                    </div>

                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone Number * (11 digits, starts with 01)</label>
                        <input type="text" class="form-control" id="phone" name="Phone"
                               pattern="01[0-9]{9}"
                               title="Phone number must be 11 digits starting with 01"
                               placeholder="01XXXXXXXXX" required />
                    </div>

                    <div class="mb-3">
                        <label for="dateOfBirth" class="form-label">Date of Birth * (Must be 18+)</label>
                        <input type="date" class="form-control" id="dateOfBirth" name="DateOfBirth"
                               max="@DateTime.Now.AddYears(-18).ToString("yyyy-MM-dd")" required />
                    </div>

                    <div class="mb-3">
                        <label for="nidNumber" class="form-label">NID Number * (17 digits)</label>
                        <input type="text" class="form-control" id="nidNumber" name="NIDNumber"
                               pattern="[0-9]{17}"
                               maxlength="17"
                               minlength="17"
                               title="NID must be exactly 17 digits"
                               placeholder="Enter your 17-digit NID number" required />
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Password * (minimum 6 characters)</label>
                        <input type="password" class="form-control" id="password" name="Password"
                               minlength="6" required />
                    </div>

                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirm Password *</label>
                        <input type="password" class="form-control" id="confirmPassword" name="ConfirmPassword" required />
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="terms" name="Terms" required />
                        <label class="form-check-label" for="terms">
                            I agree to the
                            @Html.ActionLink(
                                "terms and conditions",   // link text
                                "Terms",                  // action
                                "Terms",                  // controller
                                null,                     // route values
                                new { style = "color:#007BFF;", target = "_blank" } // html attributes
                            )
                        </label>
                    </div>

                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn"
                                style="background-color: #5C0002; color: #ffffff; border: none; width: 200px;">
                            Create Account
                        </button>
                    </div>
                }

                <p class="text-center mt-3" style="color:#000000;">
                    Already have an account? <a href="@Url.Action("Login", "Login")" style="color:#007BFF;">Login here</a>
                </p>
            </div>
        </div>
    </div>
</main>

<script>
    document.getElementById('confirmPassword').addEventListener('input', function () {
        var password = document.getElementById('password').value;
        var confirmPassword = this.value;

        if (password !== confirmPassword) {
            this.setCustomValidity('Passwords do not match');
        } else {
            this.setCustomValidity('');
        }
    });
</script>