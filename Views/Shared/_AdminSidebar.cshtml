<!-- Hamburger Icon (visible on mobile) -->
<button id="hamburgerBtn"
        onclick="document.getElementById('adminSidebar').style.display =
                 document.getElementById('adminSidebar').style.display === 'block' ? 'none' : 'block';"
        style="display:none; font-size:1.5rem; color:#5C0002; cursor:pointer; padding:10px 20px; background-color:#FBE9E7; border:none; border-bottom:2px solid #5C0002; margin-bottom:10px;">
    ☰ Admin Menu
</button>

<!-- Sidebar -->
<div id="adminSidebar"
     style="width:220px; background-color:#FBE9E7; padding:20px 10px; border-right:2px solid #5C0002; min-height:100vh; box-sizing:border-box;">
    <div style="display:flex; justify-content:center; margin-bottom:20px;">
        <h4 style="color:#5C0002; font-weight:bold; font-size:1.2rem;">🛠 Admin Menu</h4>
    </div>
    <ul style="list-style:none; padding-left:0; margin:0;">
        <li style="margin-bottom:12px;"><a href="/Admin/Dashboard" style="color:#5C0002; text-decoration:none;">📊 Dashboard</a></li>
        <li style="margin-bottom:12px;"><a href="/Admin/UserManagement" style="color:#5C0002; text-decoration:none;">👥 User Management</a></li>
        <li style="margin-bottom:12px;"><a href="/Admin/PostManagement" style="color:#5C0002; text-decoration:none;">🏠 Post Management</a></li>
        <li style="margin-bottom:12px;"><a href="/Admin/PaymentHandling" style="color:#5C0002; text-decoration:none;">💳 Payment Handling</a></li>
        <li style="margin-bottom:12px;"><a href="/Admin/ReportManagement" style="color:#5C0002; text-decoration:none;">🚨 Report Management</a></li>
        <li style="margin-bottom:12px;"><a href="/Admin/VerificationQueue" style="color:#5C0002; text-decoration:none;">✅ Verification Queue</a></li>
        <li style="margin-bottom:12px;"><a href="/Admin/Analytics" style="color:#5C0002; text-decoration:none;">📈 Analytics</a></li>
        <li style="margin-bottom:12px;"><a href="/Admin/Settings" style="color:#5C0002; text-decoration:none;">⚙️ Settings</a></li>
    </ul>
</div>

<!-- Responsive behavior (inline JS) -->
<script>
    function handleResize() {
        var sidebar = document.getElementById('adminSidebar');
        var hamburger = document.getElementById('hamburgerBtn');
        if (window.innerWidth <= 768) {
            sidebar.style.display = 'none';
            hamburger.style.display = 'block';
        } else {
            sidebar.style.display = 'block';
            hamburger.style.display = 'none';
        }
    }

    // Initial check
    handleResize();

    // Adjust on window resize
    window.addEventListener('resize', handleResize);
</script>
